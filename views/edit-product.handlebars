<article>
  <a href="/dashboard"> &larr; Back to dashboard</a>
  <h2>
    Edit Post
  </h2>
  <form class="product-card">
    <div>
      <input name="product-name" type="text" value="{{product.product_name}}" />
      <input name="product-description" type="text" value="{{product.description}}" />
      <input name="product-price" type="text" value="{{product.price}}" />
    </div>
    <button class="btn btn-primary" type="submit">Save post</button>
    <button class="btn btn-primary" type="button" class="delete-post-btn">Delete post</button>
    <img src="/css/uploadImages/{{product.filename}}">
  </form>
  
</article>

<script src="/js/edit-product.js"></script>
<script src="/js/delete-product.js"></script>