<div class="row justify-space-between-md">
  <div class="login-card">
    <h2 class="page-title">Post Your Product</h2>
    <form class="form login-form">
      <div class="form-group">
        <label for="product-name">Title:</label>
        <input class="form-input" type="text" id="product-name" />
      </div>
      <div class="form-group">
        <label for="product-price">Price:</label>
        <input class="form-input" type="price" id="product-price" />
      </div>
      <div class="form-group">
        <label for="product-description">Post a description:</label>
        <input class="form-input" type="description" id="product-description" />
      </div>
      <div class="form-group">
      <label for="categories">Choose a category:</label>
<select id="categories" name="categories">
  <option value="shirts">Shirts</option>
  <option value="shorts">Shorts</option>
  <option value="skirts">Skirts</option>
  <option value="hats">Hats</option>
</select>
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">Post It!</button>
      </div>
    </form>
  </div>
  

<script src="./js/createproducthandle.js"></script>